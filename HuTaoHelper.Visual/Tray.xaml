<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:utils="clr-namespace:HuTaoHelper.Visual.View.Utils">
    <tb:TaskbarIcon x:Key="TrayIcon"
                    Visibility="Visible"
                    NoLeftClickDelay="True"
                    IconSource="/Images/IconLight.ico">
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem Header="{Binding Path=LocMenuExit, Source={StaticResource Translations}}"
                          Command="utils:StaticCommands.TrayExitCommand"/>
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
    </tb:TaskbarIcon>
</ResourceDictionary>